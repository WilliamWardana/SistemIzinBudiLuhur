generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Siswa {
  id Int @default(autoincrement()) @id
  nis String? 
  nama String? 
  kelas String? 
  peminatan String? 
}

model Izin{
  id Int @id @default(autoincrement())
  nis String
  nama String
  kelas String
  keperluan String?
  jamMulai DateTime @map("jam_mulai") @default(now())
  jamSelesai DateTime @map("jam_selesai")
  status String @default("unaccept")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}