<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background: linear-gradient(#3d2f14, #dbab51);">
    <div class="card p-3 shadow-lg" 
         style="width: 90%; background: rgba(255,255,255,0.15); backdrop-filter: blur(10px); border-radius: 20px; border: 1px solid rgba(255,255,255,0.2);">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-white">Data Izin Murid</h2>
        </div>

        <div class="table-responsive no-scrollbar d-none d-md-block">
            <table class="table table-hover align-middle text-white">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nama</th>
                        <th>Kelas</th>
                        <th>Keperluan</th>
                        <th>Jam Selesai</th>
                        <th>Status</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                <% izins.forEach((izin, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= izin.nama %></td>
                        <td><%= izin.kelas %></td>
                        <td><%= izin.keperluan %></td>
                        <td><%= izin.jam_selesai %></td>
                        <td>
                            <% if (izin.status === 'unaccept') { %>
                            <span class="badge bg-warning text-dark">Belum</span>
                            <% } else if (izin.status === 'accwakel') { %>
                            <span class="badge bg-primary">Wakel</span>
                            <% } else if (izin.status === 'acckesiswaan') { %>
                            <span class="badge bg-info">Kesiswaan</span>
                            <% } else if (izin.status === 'accpiket') { %>
                            <span class="badge bg-success">Piket</span>
                            <% } else { %>
                            <span class="badge bg-danger">Ditolak</span>
                            <% } %>
                        </td>
                        <td>
                            <div class="d-flex flex-wrap gap-2">
                            <% if (izin.status === 'unaccept') { %>
                                <a href="/accept_wakel/<%= izin.id %>" class="btn btn-sm <%= role==='wakel' ? 'btn-success':'btn-secondary disabled' %>">✔</a>
                            <% } else if (izin.status === 'accwakel') { %>
                                <a href="/accept_kesiswaan/<%= izin.id %>" class="btn btn-sm <%= role==='kesiswaan' ? 'btn-success':'btn-secondary disabled' %>">✔</a>
                            <% } else if (izin.status === 'acckesiswaan') { %>
                                <a href="/accept_piket/<%= izin.id %>" class="btn btn-sm <%= role==='piket' ? 'btn-success':'btn-secondary disabled' %>">✔</a>
                            <% } else { %>
                                <a href="#" class="btn btn-sm btn btn-secondary disabled">✔</a>
                            <% } %>

                            <% if (izin.status === 'reject') { %>
                                <a href="/tolak_izin/<%= izin.id %>" class="btn btn-sm btn-danger disabled">✖</a>
                            <% } else { %>
                                <% if (role === 'wakel') { %>
                                    <a href="/tolak_izin?role=wakel&id=<%= izin.id %>" class="btn btn-sm btn-danger">✖</a>
                                <% } else if (role === 'kesiswaan') { %>
                                    <a href="/tolak_izin?role=kesiswaan&id=<%= izin.id %>" class="btn btn-sm btn-danger">✖</a>
                                <% } else { %>
                                    <a href="/tolak_izin?role=piket&id=<%= izin.id %>" class="btn btn-sm btn-danger">✖</a>
                                <% } %>
                            <% } %>
                            </div>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
            </div>

            <!-- Mobile-friendly card list -->
            <div class="d-md-none">
            <% izins.forEach((izin, index) => { %>
                <div class="card mb-2 p-2 text-white" style="background: rgba(255,255,255,0.1); border-radius:12px;">
                <div class="d-flex justify-content-between" style="margin: 5px;">
                    <strong><%= izin.nama %> (<%= izin.kelas %>)</strong>
                    <% if (izin.status === 'unaccept') { %>
                    <span style="padding: 6px;" class="badge bg-warning text-dark">Belum Izin</span>
                    <% } else if (izin.status === 'accwakel') { %>
                    <span style="padding: 6px;" class="badge bg-primary"> Diizinkan Wakel</span>
                    <% } else if (izin.status === 'acckesiswaan') { %>
                    <span style="padding: 6px;" class="badge bg-info"> Diizinkan Kesiswaan</span>
                    <% } else if (izin.status === 'accpiket') { %>
                    <span style="padding: 6px;" class="badge bg-success"> Diziinkan Piket</span>
                    <% } else { %>
                    <span style="padding: 6px;" class="badge bg-danger">Ditolak</span>
                    <% } %>
                </div>
                <small><%= izin.keperluan %> | Selesai: <%= izin.jam_selesai %></small>
                <div class="mt-2 d-flex gap-2">
                    <% if (izin.status === 'unaccept') { %>
                    <a href="/accept_wakel/<%= izin.id %>" class="btn btn-sm <%= role==='wakel' ? 'btn-success':'btn-secondary disabled' %>">✔ Izinkan</a>
                    <% } else if (izin.status === 'accwakel') { %>
                    <a href="/accept_kesiswaan/<%= izin.id %>" class="btn btn-sm <%= role==='kesiswaan' ? 'btn-success':'btn-secondary disabled' %>">✔ Izinkan</a>
                    <% } else if (izin.status === 'acckesiswaan') { %>
                    <a href="/accept_piket/<%= izin.id %>" class="btn btn-sm <%= role==='piket' ? 'btn-success':'btn-secondary disabled' %>">✔ Izinkan</a>
                    <% } else { %>
                    <a href="#" class="btn btn-sm btn-secondary disabled">✔ Izinkan</a>
                    <% } %>

                    <% if (izin.status === 'reject') { %>
                    <a href="/tolak_izin/<%= izin.id %>" class="btn btn-sm btn-danger disabled">✖ Tolak</a>
                    <% } else { %>
                        <% if (role === 'wakel') { %>
                            <a href="/tolak_izin?role=wakel&id=<%= izin.id %>" class="btn btn-sm btn-danger">✖ Tolak</a>
                        <% } else if (role === 'kesiswaan') { %>
                            <a href="/tolak_izin?role=kesiswaan&id=<%= izin.id %>" class="btn btn-sm btn-danger">✖ Tolak</a>
                        <% } else { %>
                            <a href="/tolak_izin?role=piket&id=<%= izin.id %>" class="btn btn-sm btn-danger">✖ Tolak</a>
                        <% } %>
                    <% } %>
                </div>
                </div>
            <% }) %>
            </div>

    </div>
</div>

<!-- Optional: Include FontAwesome for icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<style>

.table-responsive {
  width: 100%;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  border-radius: 12px;
  background: rgba(255, 255, 255, 0.05);
  scrollbar-width: none;
}

.table-responsive::-webkit-scrollbar {
  display: none;
}

.table {
  margin-bottom: 0;
  border-collapse: separate;
  border-spacing: 0;
}

.table th,
.table td {
  white-space: nowrap;
  vertical-align: middle;
  padding: 10px 15px;
}

.table thead tr:first-child th:first-child {
  border-top-left-radius: 12px;
}

.table thead tr:first-child th:last-child {
  border-top-right-radius: 12px;
}

.table tbody tr:last-child td:first-child {
  border-bottom-left-radius: 12px;
}

.table tbody tr:last-child td:last-child {
  border-bottom-right-radius: 12px;
}
</style>
