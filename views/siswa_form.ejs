<div class="bg-image">
  <div class="d-flex justify-content-center align-items-center min-vh-100 py-4">
    <div class="container">
      <div class="row g-4 justify-content-center">
        <div class="col-12 col-lg-5">
          <div class="card shadow-lg form-card p-4">
            <div class="text-center mb-4">
              <h3 class="fw-bold text-white">Form Izin Siswa</h3>
              <div class="line mb-2 mx-auto"></div>
              <p class="text-white-50 small">
                Isi data berikut untuk mengajukan izin
              </p>
            </div>

            <form method="POST" action="/siswa/izin">
              <div class="mb-3">
                <label class="form-label text-white">NIS</label>
                <input
                  type="text"
                  name="nis"
                  class="form-control glass-input"
                  readonly
                  value="<%= nis %>"
                  required
                />
              </div>

              <div class="mb-3">
                <label class="form-label text-white">Nama</label>
                <input
                  type="text"
                  name="nama"
                  class="form-control glass-input"
                  readonly
                  value="<%= siswa.nama %>"
                  required
                />
              </div>

              <div class="mb-3">
                <label class="form-label text-white">Kelas</label>
                <input
                  type="text"
                  name="kelas"
                  class="form-control glass-input"
                  readonly
                  value="<%= siswa.kelas %>"
                  required
                />
              </div>

              <div class="mb-3">
                <label class="form-label text-white">Peminatan</label>
                <input
                  type="text"
                  name="peminatan"
                  class="form-control glass-input"
                  readonly
                  value="<%= siswa.peminatan %>"
                  required
                />
              </div>

              <div class="mb-3">
                <label class="form-label text-white">Keperluan</label>
                <textarea
                  name="keperluan"
                  class="form-control glass-input"
                  rows="3"
                  placeholder="Tuliskan keperluan izin Anda"
                  required
                ></textarea>
              </div>

              <div class="mb-3">
                <label class="form-label text-white">Jam Selesai</label>
                <div class="time-input-container">
                  <span
                    class="input-group-text bg-transparent text-white border-0"
                  >
                    <i class="bi bi-clock"></i>
                  </span>

                  <select name="jam" class="form-control glass-input" required>
                    <option value="">Jam</option>
                    <% for (let i = 0; i < 24; i++) { %>
                    <option value="<%= i.toString().padStart(2, '0') %>">
                      <%= i.toString().padStart(2, '0') %>
                    </option>
                    <% } %>
                  </select>

                  <span
                    class="input-group-text bg-transparent text-white border-0"
                    >:</span
                  >

                  <select
                    name="menit"
                    class="form-control glass-input"
                    required
                  >
                    <option value="">Menit</option>
                    <% for (let i = 0; i < 60; i+=5) { %>
                    <option value="<%= i.toString().padStart(2, '0') %>">
                      <%= i.toString().padStart(2, '0') %>
                    </option>
                    <% } %>
                  </select>
                </div>
              </div>

              <div class="d-grid">
                <button type="submit" class="btn btn-gradient fw-bold py-2">
                  Minta Izin
                </button>
              </div>
            </form>
          </div>
        </div>

        <div class="col-12 col-lg-7">
          <div class="card shadow-lg form-card p-3">
            <h5 class="text-white fw-bold mb-3">Riwayat Izin</h5>
            <div class="table-responsive no-scrollbar">
              <table class="table table-hover align-middle text-white mb-0">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Keperluan Izin</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% izins.forEach((izin, index) => { %>
                  <tr>
                    <td class="text-white"><%= index + 1 %></td>
                    <td class="text-white"><%= izin.keperluan %></td>
                    <td class="text-white">
                      <% if (izin.status === 'unaccept') { %>
                      <a
                        href="/bukti_izin?status=unacc&id=<%= izin.id %>"
                        class="badge bg-warning text-dark"
                        >Belum Izin</a
                      >
                      <% } else if (izin.status === 'accwakel') { %>
                      <a
                        href="/bukti_izin?status=accwakel&id=<%= izin.id %>"
                        class="badge bg-primary"
                        >Wakel Mengizinkan</a
                      >
                      <% } else if (izin.status === 'acckesiswaan') { %>
                      <a
                        href="/bukti_izin?status=acckesiswaan&id=<%= izin.id %>"
                        class="badge bg-info"
                        >Kesiswaan Mengizinkan</a
                      >
                      <% } else if (izin.status === 'accpiket') { %>
                      <a
                        href="/bukti_izin?status=accpiket&id=<%= izin.id %>"
                        class="badge bg-success"
                        >Anda Diizinkan</a
                      >
                      <% } else { %> <% if (izin.status === 'rejected_wakel') {
                      %>
                      <a
                        href="/bukti_izin?status=rejected_wakel&id=<%= izin.id %>"
                        class="badge bg-danger"
                        >Ditolak</a
                      >
                      <% } else if (izin.status === 'rejected_kesiswaan') { %>
                      <a
                        href="/bukti_izin?status=rejected_kesiswaan&id=<%= izin.id %>"
                        class="badge bg-danger"
                        >Ditolak</a
                      >
                      <% } else { %>
                      <a
                        href="/bukti_izin?status=rejected_piket&id=<%= izin.id %>"
                        class="badge bg-danger"
                        >Ditolak</a
                      >
                      <% } %> <% } %>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

